<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient
                    android:angle="270"
                    android:endColor="@color/colorTransparent"
                    android:centerColor="@color/colorTransparent"
                    android:startColor="@color/colorTransparent"
                    android:type="linear" />
            <size
                    android:width="24dp"
                    android:height="24dp" />
        </shape>
    </item>
    <item
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient
                    android:angle="90"
                    android:endColor="@color/colorTransparent"
                    android:centerColor="@color/colorCreamHardTransparent"
                    android:startColor="@color/colorPrimaryTransparent" />
        </shape>
    </item>
</layer-list>