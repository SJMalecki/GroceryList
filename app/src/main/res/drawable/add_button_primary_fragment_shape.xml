<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                    android:angle="270"
                    android:endColor="#00000000"
                    android:startColor="@color/colorPrimaryTransparent"
                    android:type="linear" />
            <size
                    android:width="24dp"
                    android:height="24dp" />
        </shape>
    </item>
    <item
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                    android:angle="270"
                    android:endColor="@color/colorPrimaryDarkTransparent"
                    android:startColor="#00000000" />
        </shape>
    </item>
</layer-list>